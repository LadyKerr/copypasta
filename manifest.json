{
  "name": "CopyPasta",  
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "LadyKerr",
  "description": "Enable pasting on sites that disable the default pasting behavior",
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["scripts/enablePaste.js"],
        "run_at": "document_start"
      }
    ],
     "icons": {
          "16": "images/icon16.png",
          "32": "images/icon32.png",
          "48": "images/icon48.png",
          "128": "images/icon128.png"
        },
    "action": {
          "default_icon": {              
          "16": "images/icon16.png", 
          "24": "images/icon24.png", 
          "32": "images/icon32.png"  
      },
       "default_title": "CopyPasta"
    }
  }