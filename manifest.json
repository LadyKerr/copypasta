{
  "name": "CopyPasta",  
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "LadyKerr",
  "description": "Enable pasting on sites that disable the default pasting behavior",
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["scripts/enablePaste.js"],
        "run_at": "document_start"
      }
    ],
     "icons": {
          "16": "images/16.png",
          "32": "images/32.png",
          "48": "images/48.png",
          "128": "images/128.png"
        },
    "action": {
          "default_icon": {              
          "16": "images/16.png", 
          "24": "images/24.png", 
          "32": "images/32.png",
          "128": "images/128.png"
      },
       "default_title": "CopyPasta"
    }
  }